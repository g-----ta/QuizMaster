<div class="main questions-index">
  <div class="container">
    <!-- <h1 class="users-heading">ジャンル一覧</h1> -->
    <div class="row">
      <div class="col s12">
        <div class="questions-index-item">
          <div class="col s5">
            <div class="question-first-column">id</div>
            <div class="question-second-column">Question</div>
          </div>
          <div class="col s4">
            <div class="question-right">
              <div class="question-third-column">Answer</div>
            </div>
          </div>
          <div class="col s3">
            <div class="question-right">
              <div>Updated date</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col s12">  
        <% @questions.each do |question| %>
          <a href="<%=" /questions/#{question.id}/edit "%>" >
            <div class="questions-index-item">
              <div class="col s5">
                <div class="question-first-column"><%= question.id %></div>
                <div class="question-second-column"><%== question.question %></div>
              </div>
              <div class="col s4">
                <div class="question-right">
                  <div class="question-third-column"><%= question.answer %></div>
                </div>
              </div>
              <div class="col s2 question-created-date">
                <div class="question-right">
                  <div><%= question.updated_at.strftime("%Y年%m月%d日") %></div>
                </div>
              </div>
              <div class="col s1 question-created-date">
                <div class="question-right">
                  <div><%= link_to "/questions/#{question.id}", method: :delete, data: { confirm: 'Are you sure to delete this question?' } do %>
                    <i class="fa fa-trash fa-w-18 fa-2x" ></i>
                    
                    <% end %>
                  </div>
                </div>
              </div>


            </div>
          </a>
        <% end %>
      </div>
    </div>

  </div>
</div>